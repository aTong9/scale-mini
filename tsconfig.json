{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "paths": {
    //   // "@/src/*": ["./src/*"],
    //   "@/api/*": ["./src/api/*"],
    //   "@/assets/*": ["./src/assets/*"],
    //   "@/interface/*": ["./src/interface/*"],
    //   "@/store/*": ["./src/store/*"],
    //   "@/utils/*": ["./src/utils/*"]
    // },
    "typeRoots": [
      "node_modules/@types",
      "src/@types/global.d.ts"
    ],
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2015",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ],
    "rootDir": ".",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}